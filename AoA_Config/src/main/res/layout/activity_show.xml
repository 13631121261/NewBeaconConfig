<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:background="@drawable/shape"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:onClick="onClick"
                android:id="@+id/beacon_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/mac"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="MAC"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txt_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_1"
                    android:layout_marginLeft="50dp"
                    android:alpha="0.7"
                    android:paddingTop="1dp"
                    android:text="AA:AA:AA:AA:AA:AA"
                  />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/modifyImgV"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.5"
                    android:src="@drawable/forward" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/beacon_dbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:onClick="onClick"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/txpwr"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/txt_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Transmitting Power"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txt_dbm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txt_5"
                    android:layout_marginLeft="50dp"
                    android:alpha="0.7"
                    android:paddingTop="1dp"
                    android:text="AA:AA:AA:AA:AA:AA"
                   />

                <ImageView

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.5"
                    android:src="@drawable/forward"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:onClick="onClick"
                android:id="@+id/beacon_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/adv"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Broadcast Interval "
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_6"
                    android:layout_marginLeft="50dp"
                    android:alpha="0.7"
                    android:paddingTop="1dp"
                    android:text="AA:AA:AA:AA:AA:AA"
                   />

                <ImageView

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.5"
                    android:src="@drawable/forward"
                    />

            </RelativeLayout>

















            <RelativeLayout
                android:visibility="visible"

                android:id="@+id/beacon_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="2dp"
                    android:src="@drawable/battery"/>

                <TextView
                    android:id="@+id/txt_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Battery"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txt_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_7"
                    android:layout_marginLeft="50dp"
                    android:alpha="0.7"
                    android:paddingTop="1dp"
                    android:text="AA:AA:AA:AA:AA:AA"
                  />

                <ImageView

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.5"
                    android:src="@drawable/forward"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="visible"

                android:id="@+id/beacon_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="2dp"
                    android:src="@drawable/battery"/>

                <TextView
                    android:id="@+id/txt_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Version"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_8"
                    android:layout_marginLeft="50dp"
                    android:alpha="0.7"
                    android:paddingTop="1dp"
                    android:text="AA:AA:AA:AA:AA:AA"
                    />

                <ImageView

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.5"
                    android:src="@drawable/forward"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_height="100dp"></ProgressBar>
</RelativeLayout>
