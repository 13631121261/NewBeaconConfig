<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:orientation="vertical"
    tools:context="com.ble.activity.UidActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_url_head"
            android:layout_width="wrap_content"
            android:entries="@array/eddystone_url_head"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="150dp"
            android:id="@+id/ed_url"
            android:hint="1-17 byte"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/sp_url_end"
            android:layout_width="wrap_content"
            android:entries="@array/spinner_url_end"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TX Power at 0M:"/>

    <Spinner
        android:id="@+id/sp_url_txpower"
        android:layout_width="wrap_content"
        android:entries="@array/spinner_txpowerat0m"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"/>

</LinearLayout>